<% layout('layout') -%>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <img src="<%= product.Image %>">
        </div>

        <div class="col-md-4">
            <h3><%= product.Name %></h3>
            <h1><%= product.Price %></h1>
            <p class="lead">product.ProductDesc</p>

            <form method="post">
                <div class="btn-group" role="group" aria-label="...">
                    <input type="hidden" name="quantity" id="quantity" value="1">
                    <button type="button" id="minus" class="btn btn-default">-</button>
                    <button type="button" id="total" class="btn btn-default">1</button>
                    <button type="button" id="plus" class="btn btn-default">+</button>

                </div>

                <div class="form-group">
                    <input type="hidden" name="product_id" id="quantity" value="<%= product.ProductID %>">
                    <input type="hidden" name="priceHidden" id="priceHidden" value="<%= product
                            .Price %>">

                    <input type="hidden" name="item" class="form-control" value="<%= product.Name %>">
                    <input type="text" id="priceValue" name="priceValue" class="form-control" value="<%= product.Price
                    %>">
                </div>

                <% if(login) { %>
                    <button type="submit" class="btn btn-primary btn-lg">Add to cart</button>
                <% } else { %>
                    <a href="/signup" class="btn btn-info btn-lg">Sign up to begin buying!</a>
                <% } %>

            </form>
        </div>
    </div>
</div>
